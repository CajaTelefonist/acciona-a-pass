<?xml version="1.0" encoding="UTF-8" ?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"  
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"            
        android:background="#FFFFFF">

    
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:orientation="vertical">            

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"            
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                        <View
                android:layout_width="1dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/colorRed"
                android:background="@drawable/button_red"/>

                        <View
                android:layout_width="1dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:backgroundTint="@color/colorRed"
                android:background="@drawable/button_red"/>

            </LinearLayout>

         <TextView
            android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/health_step_two_description" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="16dp"                
                android:textColor="#666666"
                android:text="@string/health_step_two_description_subtitle" />
            <ImageView 
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/img_contacto"/>
                <TextView
                android:id="@+id/help1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-64dp"
                android:textSize="16dp"                
                android:textColor="#666666"
                android:text="@string/health_step_two_help1" />

                <TextView
                android:id="@+id/help2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                    android:layout_marginLeft="24dp"
                android:textSize="16dp"                
                android:textColor="#666666"
                android:text="@string/health_step_two_help2" />

            </LinearLayout>>
        </ScrollView>
        </LinearLayout>>

      <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
            android:background="#EFEFEF"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"  
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"    
        android:orientation="horizontal">

        <TextView
                android:id="@+id/btNo"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/health_step_two_button_no"
                android:background="@drawable/button_white"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

     <TextView
                android:id="@+id/btYes"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"   
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/health_step_two_button_yes"
                android:background="@drawable/button_white"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

         </LinearLayout>

</LinearLayout>