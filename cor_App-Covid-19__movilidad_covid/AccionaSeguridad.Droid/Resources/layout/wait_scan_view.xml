
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:background="#5a5a5a">    
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/top_left"
        android:visibility="gone"
        android:adjustViewBounds="true"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/top_right"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/bottom_left"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/bottom_right"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/touch"
        android:adjustViewBounds="true"        
        android:layout_centerInParent="true"/>
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="23dp"
      android:textColor="#ffffff"
      android:layout_below="@id/touch"
      android:gravity="center"
      android:text="@string/touch_start"
      android:layout_margin="20dp"  />
</RelativeLayout>